<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.ufg.inf.dosador.app.UsuarioActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UsuÃ¡rio:"
        android:id="@+id/textView"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="5"
        android:id="@+id/editUsuario"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo:"
        android:layout_alignBottom="@+id/editSexo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:id="@+id/editSexo"
        android:layout_below="@+id/editUsuario"
        android:layout_alignLeft="@+id/editUsuario"
        android:layout_alignStart="@+id/editUsuario" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idade:"
        android:layout_alignBottom="@+id/editIdade"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editIdade"
        android:ems="5"
        android:inputType="number"
        android:layout_below="@+id/editSexo"
        android:layout_alignLeft="@+id/editSexo"
        android:layout_alignStart="@+id/editSexo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso:"
        android:id="@+id/textPeso"
        android:layout_alignBottom="@+id/editPeso"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPeso"
        android:ems="5"
        android:inputType="numberDecimal"
        android:layout_below="@+id/editIdade"
        android:layout_alignLeft="@+id/editIdade"
        android:layout_alignStart="@+id/editIdade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura:"
        android:id="@+id/textAltura"
        android:layout_alignBottom="@+id/editAltura"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editAltura"
        android:ems="5"
        android:inputType="numberDecimal"
        android:layout_below="@+id/editPeso"
        android:layout_alignLeft="@+id/editPeso"
        android:layout_alignStart="@+id/editPeso" />


</RelativeLayout>
