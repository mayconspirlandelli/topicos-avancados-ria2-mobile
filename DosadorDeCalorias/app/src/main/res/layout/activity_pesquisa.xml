<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.ufg.inf.dosador.app.PesquisaActivity">

    <EditText
        android:id="@+id/edit_pesquisa"
        android:text="banana"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btn_pesquisar"/>

    <ImageButton
        android:id="@+id/btn_pesquisar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_alignParentRight="true"
        android:text="Buscar"
        android:src="@drawable/abc_ic_search_api_mtrl_alpha" />

    <ListView
        android:id="@+id/listaAlimentos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_pesquisar" />

</RelativeLayout>
