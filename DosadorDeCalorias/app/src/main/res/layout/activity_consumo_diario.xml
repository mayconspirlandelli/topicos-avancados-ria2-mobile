<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.ufg.inf.dosador.app.ConsumoDiarioActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendário"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textCalendario"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Café da Manhã"
        android:id="@+id/textCafe"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textCalendario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonCafe"
        android:src="@drawable/add"
        android:adjustViewBounds="true"
        android:onClick="pesquisa"
        android:layout_alignBottom="@+id/textCafe"
        android:layout_alignLeft="@+id/imageButtonAlmoco"
        android:layout_alignStart="@+id/imageButtonAlmoco" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Almoço"
        android:id="@+id/textAlmoco"
        android:layout_below="@+id/textCafe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAlmoco"
        android:adjustViewBounds="true"
        android:src="@drawable/add"
        android:onClick="pesquisa"
        android:layout_alignBottom="@+id/textAlmoco"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jantar"
        android:id="@+id/textJantar"
        android:layout_below="@+id/textAlmoco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonJantar"
        android:adjustViewBounds="true"
        android:src="@drawable/add"
        android:onClick="pesquisa"
        android:layout_above="@+id/textLanche"
        android:layout_alignLeft="@+id/imageButtonAlmoco"
        android:layout_alignStart="@+id/imageButtonAlmoco" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lanche"
        android:id="@+id/textLanche"
        android:layout_below="@+id/textJantar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonLanche"
        android:adjustViewBounds="true"
        android:src="@drawable/add"
        android:onClick="pesquisa"
        android:layout_alignBottom="@+id/textLanche"
        android:layout_alignLeft="@+id/imageButtonJantar"
        android:layout_alignStart="@+id/imageButtonJantar" />

</RelativeLayout>
